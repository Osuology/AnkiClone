<Window x:Class="AnkiClone.DeckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnkiClone"
        mc:Ignorable="d"
        Title="DeckWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="doneButton" Content="Done" HorizontalAlignment="Center" Height="23" Margin="0,339,0,0" VerticalAlignment="Top" Width="80" Click="doneButtonClick"/>
        <ListBox x:Name="cardList" HorizontalAlignment="Left" Height="194" Margin="603,0,0,0" VerticalAlignment="Center" Width="146" SelectionChanged="cardListSelected"/>
        <TextBox x:Name="cardTextBox" HorizontalAlignment="Center" Margin="0,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="168" Height="70" TextChanged="cardTextChanged"/>

    </Grid>
</Window>
