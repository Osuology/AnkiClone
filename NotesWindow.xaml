<Window x:Class="FlashcardMemorizer.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashcardMemorizer"
        mc:Ignorable="d"
        Title="NotesWindow" Height="450" Width="800" KeyDown="keysDown">
    <Grid>
        <RichTextBox x:Name="notesBox" HorizontalAlignment="Left" Height="325" Margin="42,34,0,0" VerticalAlignment="Top" Width="556">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="toDeckButton" Content="To Deck" HorizontalAlignment="Left" Height="41" Margin="413,383,0,0" VerticalAlignment="Top" Width="138" Click="convertToDeck"/>
        <ListBox x:Name="deckAssociation1" HorizontalAlignment="Left" Height="325" Margin="625,34,0,0" VerticalAlignment="Top" Width="57"/>
        <ListBox x:Name="deckAssociation2" HorizontalAlignment="Left" Height="325" Margin="709,34,0,0" VerticalAlignment="Top" Width="62"/>
        <Button x:Name="associateButton" Content="Associate" HorizontalAlignment="Left" Height="19" Margin="654,370,0,0" VerticalAlignment="Top" Width="86"/>
    </Grid>
</Window>
